#!/bin/bash

#set -x
set -e 

. config.txt


echo "BUILD_TOOL=${BUILD_TOOL}"
if [ "${BUILD_TOOL}" = "ninja" ]
then
    GENERATOR="-GNinja"
else
    GENERATOR='-GUnix Makefiles'
fi

echo "GENERATOR=${GENERATOR}"
echo "CXX=${CXX}"
export CXX=${CXX}

pushd  core
. ./generate_packet_types.sh
popd

pushd tui
. ./configure
popd

pushd SDL
. ./configure
popd

pushd server
. ./configure
popd

